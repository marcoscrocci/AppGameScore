<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGameScore.MainPage">

    <StackLayout>
        <Frame x:Name="tituloFrame" BackgroundColor="#2196F3" Padding="20,20,20,20" CornerRadius="0">
            <Label Text="Score Game" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout Padding="20">
            <StackLayout Orientation="Horizontal">
                <Entry Placeholder="ID" x:Name="entId" Keyboard="Numeric" />
                <Button Text="Localizar" Clicked="LocalizarButton_Clicked" />
                <Button Text="Excluir" Clicked="ExcluirButton_Clicked" />
                <Button Text="Novo" Clicked="NovoButton_Clicked" />
            </StackLayout>
            <StackLayout>
                <Entry Placeholder="Highscore" x:Name="entHiScore" Keyboard="Numeric" />
                <Entry Placeholder="Game" x:Name="entGame" />
                <Entry Placeholder="Name" x:Name="entName" />
                <Entry Placeholder="E-Mail" x:Name="entEmail" Keyboard="Email" />
                <Entry Placeholder="Phrase" x:Name="entPhrase" />
                <Button Text="Cadastrar" x:Name="btSalvar" Clicked="CadastrarButton_Clicked" />
            </StackLayout>
        </StackLayout>
    </StackLayout>

</ContentPage>
